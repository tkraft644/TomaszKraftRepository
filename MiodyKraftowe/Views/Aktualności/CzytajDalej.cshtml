@model Post

<br />
<div class="row white">
    <div class=" col s12">
        <div class="row">
            <div class="col s12 m6 l5">
                <img class="responsive-img" src=@Model.ObrazekURL>
            </div>
            <div class="col s12 m6 l7">
                <p class="color amber darken-3" >
                    <blockquote class="flow-text" style="border-left: 5px solid #ffa000">
                        @Model.Tytul<br>
                        @Model.Autor | @Model.DataPublikacji.DateTime.ToString("dd.MM.yyyy HH:mm")
                    </blockquote>
                </p>
            </div>
            <p class="flow-text"> @Model.Tresc</p>
        </div>
    </div>
</div>
<div class="row">
    <div class=" col s12">
        <a asp-action="" class=" btn waves-effect amber darken-3 right">Powrót</a>
        <br />
    </div>
</div>