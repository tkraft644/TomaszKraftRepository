@model IEnumerable<Produkt>
@{
    ViewData["Title"] = "Sklep";
}
@if (User.IsInRole("Admin"))
{
    <div class="fixed-action-btn">
        <a href="#!" class="btn-floating btn-large waves-effect amber darken-3">
            <i class="material-icons">menu</i>
        </a>
        <ul>
            <li>
                <a asp-action="Products"
               class="btn-floating waves-effect amber darken-4">
                    <i class="large material-icons">mode_edit</i>
                </a>
            </li>
            <li>
                <a asp-action="create"
               class="btn-floating waves-effect amber darken-4">
                    <i class="large material-icons">add</i>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Index"
               class="btn-floating waves-effect amber darken-4">
                    <i class="large material-icons">settings</i>
                </a>
            </li>
        </ul>
    </div>
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        <hr />
        <div class="center flow-text">
            @TempData["success"]
        </div>
        <hr />
    </div>
}
@foreach (var obj in Model)
{

    <div class="row">
        <div class="col s12  hide-on-small-only">
            <div class="card horizontal small">
                <div class="card-image">
                    <img src="@obj.ObrazekURL">
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        <span class="card-title">@obj.Nazwa</span>
                        <p>@obj.Cena zł<br>@obj.Opis</p>
                    </div>
                    <div class="card-action">
                        <a class=" btn waves-effect amber darken-3 right"
                       asp-controller="Koszyk" asp-action="Add" asp-route-id="@obj.Id">
                            Dodaj do koszyka
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m12 hide-on-med-and-up">
            <div class="card large">
                <div class="card-image large">
                    <img src=@obj.ObrazekURL>
                </div>
                <div class="card-content">
                    <span class="card-title"> @obj.Nazwa</span>
                    <p>@obj.Cena zł<br>@obj.Opis</p>
                </div>
                <div class="card-action">
                    <a class=" btn waves-effect amber darken-3 right"
                   asp-controller="Koszyk" asp-action="Add" asp-route-id="@obj.Id">
                        Dodaj do koszyka
                    </a>
                </div>
            </div>
        </div>
    </div>
}




