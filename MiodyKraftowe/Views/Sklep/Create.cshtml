@model Produkt
@{
    ViewData["Title"] = "Dodawanie produktu";
}
<h3>@ViewData["Title"]</h3>
<hr />
@if (User.IsInRole("Admin"))
{
    <div class="row">
        <form enctype="multipart/form-data" method="post">

            <div class="white black-text">
                <div class="row">
                    <div class="input-field col s6">
                        <label asp-for="Nazwa"></label>
                        <input asp-for="Nazwa" class="form-control" />
                        <span asp-validation-for="Nazwa" class="text-danger"></span>
                    </div>
                    <div class="input-field col s6">
                        <label asp-for="NazwaKategoria">Kategoria</label>
                        <input asp-for="NazwaKategoria" class="form-control" />
                        <span asp-validation-for="NazwaKategoria" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label asp-for="Opis"></label>
                        <input asp-for="Opis" class="form-control" />
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label asp-for="Cena"></label>
                        <input asp-for="Cena" class="form-control" />
                        <span asp-validation-for="Cena" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <div class="file-field input-field">
                            <div class="btn waves-effect amber darken-3 ">
                                <span>Obraz</span>
                                <input asp-for="Obrazek" type="file" class="form-control custom-file-input">
                                <span asp-validation-for="Obrazek" class="text-danger"></span>
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button asp-page-handler="Upload" type="submit" class="waves-effect amber darken-3 btn">Dodaj</button>
            <a asp-action="Index" class="btn waves-effect amber darken-3">
                Anuluj
            </a>
        </form>
    </div>
}
else
{
    <h1>Strona dostępna tylko dla administratorów</h1>
    <a class="waves-effect amber darken-3 btn-large" asp-area="Identity" asp-page="/Account/Login">
        Zaloguj się
        <i class="material-icons right">send</i>
    </a>
}
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
