@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<ul>
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a asp-area="" asp-controller="Koszyk" asp-action="AllOrders">Zamówienia</a>
        </li>
        <li>
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profil</a>
        </li>
        <li>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="waves-effect amber darken-3 btn">Wyloguj</button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a asp-area="Identity" asp-page="/Account/Register">Zarejestruj się</a>
        </li>
        <li>
            <a asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
        </li>
    }
</ul>
