@model IEnumerable<Kategoria>
@{
    ViewData["Title"] = "Wszystkie Kategorie";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista Kategorii</h2>
		</div>
        <div class="col-6 text-end">
      
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nazwa Kategorii
			</th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="100%">
                   <li>
                            <a asp-area="" asp-controller="Kategorie" asp-action="@obj.Nazwa"> @obj.Nazwa</a>
                   </li> 
				</td>
			</tr>
        }
    </tbody>

</table>
</div>